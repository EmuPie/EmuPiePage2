/*	Colors:
	Details: 	rgb(0, 200, 70)
	Background:	rgb(200, 200, 200)
	Hover:		#EEEEEE
*/
bg = rgb(200, 200, 200);
hover = rgb(190, 190, 190);
detail = rgb(0, 200, 70);

body {
	margin: 0px;
	padding: 0px;
	font-family: 'Open Sans', sans-serif;
	background-color: bg;
	color: #222;
}

#loader {
	display: block;
	position: fixed;
	top: 0px;
	bottom: 0px;
	left: 0px;
	right: 0px;
	z-index: 99;
	background-color: bg;
}

#head {
	background-image: url("https://cdn3.vox-cdn.com/thumbor/NsFDR-9V-EdXtAZ4HqaZgpYQHFM=/0x0:960x540/1600x900/cdn0.vox-cdn.com/uploads/chorus_image/image/47484177/super_mario_bros.0.png");
	margin: 0px;
	padding: 20px;
	padding-top: 20px;
	background-repeat: no-repeat;
	background-size: cover;
	background-position: 50% 50%;
	background-origin: border-box;
	box-shadow: 0px 8px 50px #000;
	padding: 0px;
}

#imgBg {
	position: absolute;
	z-index: -50;
	height: 0px;
	width: 100%;
	margin: 0px;
	padding: 0px;
	background-image: url("https://cdn3.vox-cdn.com/thumbor/NsFDR-9V-EdXtAZ4HqaZgpYQHFM=/0x0:960x540/1600x900/cdn0.vox-cdn.com/uploads/chorus_image/image/47484177/super_mario_bros.0.png");
	background-repeat: no-repeat;
	background-size: cover;
	background-position: 50% 33%;
	background-origin: border-box;
	display: none;
	opacity: 0;
}

#vidBg {
	position: absolute;
	z-index: -100;
	height: 100%;
	width: 100%;
	margin: 0px;
	padding: 0px;
}

#titleBar {
	padding: 0px;
	margin: 20px;
}

#openBtn {
	border: 2px solid detail;
	border-radius: 5px;
	background-color: rgba(200, 200, 200, 0.4);
	padding: 5px;
	font-size: 36px;
	color: detail;
	font-weight: bold;
}

#openBtn:hover {
	cursor: pointer;
}

.h1 {
	background-color: bg;
	font-size: 48px;
	padding: 5px;
	margin: 5px;
	border-right: 5px solid detail;
	vertical-align: bottom;
	box-shadow: 0px 8px 50px #000;
}

#nav ul {
	padding: 0px;
	margin: 5px;
	margin-bottom: 9px;
}

#nav ul li {
	list-style: none;
	display: inline;
	padding: 5px;
	margin: 0px;
	/*border: 2px solid red;
	border-radius: 5px;
	background-color: #fff;
	box-shadow: 0px 2px 12.5px #000;*/
}

#github {
    position: fixed;
    top: 5px;
    right: 5px;
	list-style: none;
	display: inline;
	margin: 0px;
	margin-top: -5px;
	padding: 0px;
	vertical-align: top;
}

#github img {
	padding: 0px;
	margin: 0px;
	vertical-align: bottom;
}

#github:hover {
	background-color: bg !important;
}


#selBar {
	position: fixed;
	width: 50px;
	height: 4px;
	background-color: detail;
}

#nav ul li:hover {
	background-color: hover;
	cursor: pointer;
}

#nav {
	position: fixed;
	display: block;
	padding: 0px;
	width: 100%;
	top: 150px;
	z-index: 50;
	background-color: bg;
	box-shadow: 0px 8px 50px #000;
}

#content {
	padding: 20px;
}

.image {
	border: 2px solid detail;
	border-radius: 5px;
}

#spec {
	display: none;
}

#omProj {
	display: none;
}

.portratt {
	width: 100%;
}
